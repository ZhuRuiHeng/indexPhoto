<!--index.wxml-->
<view class="container" style="background:url({{background}}) no-repeat;background-size: cover; ">

  <view class="play {{music_play?'music_play':''}}" bindtap="bindPlay"></view>
  <view class="tip">开启/关闭</view>
  <scroll-view class="index_wrap">
    <view class="logo_wrap">
       <image class='niceImg' src="{{userImg}}" mode='widthFix'></image>
       <image class='little girl' src="{{userIcon}}" mode="widthFix"></image>
    </view>
    <form report-submit="true" bindsubmit="formSubmit" class="formSubmit">
      <button class="nav_subject" formType="submit" 
              style='background:{{backgroundColor}};border:1rpx solid {{border}};box-shadow:2px 2px 5px {{border}};'>开始出题</button>
    </form>
    <!-- <button class="home_icon"  bindtap="backHome">
      <image src="../../resource/images/home_icon.png"></image>
    </button> -->


  
  </scroll-view>
</view>

