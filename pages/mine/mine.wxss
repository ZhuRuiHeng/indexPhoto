.rank_wrap{
  width: 100%;
}

.rank_item{
  display: flex;
  align-items: center;
  justify-content: space-around;
  padding: 20rpx 0;
  border-top: 1px solid #fff;
}

.item_left{
  position: relative;  
  width: 150rpx;
}

.partner_img{
  position: absolute;
  top: 0;
  left: 66rpx;
}

.item_left image{
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  background: url(https://friend-check.playonwechat.com/static/images/logo.jpg) no-repeat;
  background-size: 100%;
}

.item_con{
  color: #e93654;
  font-size: 30rpx;
}

.item_right{
  display: block;
  width: 180rpx;
  height: 60rpx;
  line-height: 60rpx;
  background: #ed7a77;
  color:#fff;
  border-radius: 30rpx;
  text-align: center;
  font-size: 26rpx;
}

.navigator-hover{
  color: #fff;
  background: #e99bac;
}

.person_info .login{
  display:block;
  width:180rpx;
  height:60rpx;
  line-height:60rpx;
  background:#e48699;
  box-shadow:2px 2px 5px #d16c81;
  text-align:center;
  border-radius:26rpx;
  border:1rpx solid #d16c81;
  color:#fff;
  font-size:30rpx;
  margin: 0 auto;
}

.no_rank{
  font-size: 32rpx;
  color: #fff;
  text-align: left;
  padding:0 50rpx;
  line-height:50rpx;
}

.feedback{
  top: 120rpx;
}
.answer{
  background: #8bc9ee;
  color: #fff;
  position: absolute;
  top: 200rpx;
  right: -26rpx;
  font-size: 26rpx;
  border-radius: 30rpx;
  padding: 6rpx 42rpx 6rpx 10rpx;
}
.answer image{
  width: 40rpx;
  height: 30rpx;
  position: relative;
  top: 2rpx;
  right: 4rpx;
}
.bg{
   width: 100%;
  height: 100vh;
  background: rgba(0, 0, 0, 0.6);
  overflow: hidden;
  position:fixed; /* static */
  top: 0;
  left: 0;
  z-index: 3;
}
.zindex{
  width: 80%;
  background: #fff;
  margin: 0 auto;
  position: absolute;
  border-radius: 20rpx;
  z-index: 6;
  top: 50%; 
  left: 50%;  
  -webkit-transform: translate(-50%,-50%);  
  -ms-transform: translate(-50%,-50%);  
  transform: translate(-50%,-50%);  
}
.title{
  background: #e48599;
  color: #fff;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  border-top-left-radius: 20rpx;
  border-top-right-radius: 20rpx;
}
.text{
  padding:40rpx;
  font-size: 34rpx;
  color: #626262;
}
.flex{
  display: flex;
  justify-content: space-around;
  color: #626262;
  margin-bottom: 10rpx;
  font-size: 32rpx;
  padding: 20rpx 20rpx 30rpx 20rpx;
}
.flex view{
  border-radius: 20rpx;
  border: 1px solid #e48599;
  padding: 10rpx 60rpx;
  font-size: 32rpx;
  margin: 10rpx auto;
}
.flex .two{
  background: #e48599;
  color: #fff;
}