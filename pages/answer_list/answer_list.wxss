/* pages/answer_list/answer_list.wxss */
.container{
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: url(https://friend-check.playonwechat.com/static/images/bg1.jpg) no-repeat;
  background-size: 100%; 
  padding: 20rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
}

.content{
  width: 100%;
  flex: 1;
}

.item.red .color{
  color: #e93656;
}
.item.blue .color{
  color: #ffc205;
}
scroll-view{
  width: 100%;
  height: 1000rpx; 
}

.title{
  font-size: 40rpx;
  text-align: center;
  line-height: 70rpx;
  color: #000;
}

.tips{
  text-align: right;
  font-size: 26rpx;
  margin: 10rpx 0;
}
.tips1{
    color: #e93656;
}
.tips2{
    color: #ffc205;
}
.item_title{
  font-size: 30rpx;
  line-height: 50rpx;
}

.choose{
  font-size: 28rpx;
  line-height: 50rpx;
}

.item{
  margin-bottom: 60rpx;
}

.bottom{
  text-align: right;
  font-size: 30rpx;
}

.search_wrap{
  width: 100%;
  display: flex;
  box-sizing: border-box;
  padding: 0 20rpx;
  height: 90rpx;
  position: relative;
}
.sousuo{
  width: 36rpx;
  height: 36rpx;
  position: absolute;
  top: 6rpx;
  left: 200rpx;
  z-index: 999;
}

.search_input{
  border-radius: 20rpx;
  background: #fff;
  border: 1rpx solid rgba(255,255,255,0.5);
  flex: 1;
  padding:6rpx 20rpx;
  font-size: 28rpx;
  color: #626262;
  text-align: center;
}

.search_btn{
  font-size: 32rpx;
  font-weight: bold;
  width: 80rpx;
  margin-left: 20rpx;
  text-align: center;
  line-height: 50rpx;
  color: #000;
  position: relative;
  top: 6rpx;
}

.no_content{
  font-size: 30rpx;
  color: #999;
  margin: 50rpx;
}
.bg{
   width: 100%;
  height: 100vh;
  background: rgba(0, 0, 0, 0.6);
  overflow: hidden;
  position:fixed; /* static */
  top: 0;
  left: 0;
  z-index: 3;
}
.zindex{
  width: 80%;
  background: #fff;
  margin: 0 auto;
  position: absolute;
  border-radius: 20rpx;
  z-index: 6;
  top: 50%; 
  left: 50%;  
  -webkit-transform: translate(-50%,-50%);  
  -ms-transform: translate(-50%,-50%);  
  transform: translate(-50%,-50%);  
}
.titlea{
  background: #e48599;
  color: #fff;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  border-top-left-radius: 20rpx;
  border-top-right-radius: 20rpx;
}
.text{
  padding:40rpx;
  font-size: 34rpx;
  color: #626262;
}
.flex{
  display: flex;
  justify-content: space-around;
  color: #626262;
  margin-bottom: 10rpx;
  font-size: 32rpx;
  padding: 20rpx 20rpx 30rpx 20rpx;
}
.flex view{
  border-radius: 20rpx;
  border: 1px solid #e48599;
  padding: 10rpx 60rpx;
  font-size: 32rpx;
  margin: 10rpx auto;
}
.flex .two{
  background: #e48599;
  color: #fff;
}